{
  "name": "event-edit",
  "version": "1.0.0",
  "description": "Event editor with Three.js",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "web": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.event-edit.app",
    "productName": "Event Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
